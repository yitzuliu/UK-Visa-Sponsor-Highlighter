{
    "manifest_version": 3,
    "name": "UK Visa Sponsor High-lighter",
    "version": "1.0.0",
    "description": "Highlights UK Visa Sponsors on LinkedIn and Indeed.",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "alarms"
    ],
    "host_permissions": [
        "https://www.gov.uk/*",
        "https://assets.publishing.service.gov.uk/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.linkedin.com/*",
                "*://*.indeed.com/*",
                "*://uk.indeed.com/*"
            ],
            "js": [
                "utils.js",
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "UK Visa Sponsor Check"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}